{{#if products.length }}
    <table class="table-products">
        <thead>
            <caption>Productos (para editar el contenido de cualquier producto hacer doble click sobre el elemento a editar y luego presionar en 'Guardar'.)</caption>
            <tr>
                <th data-product-property="id" scope="column">Id</th>
                <th scope="column">Nombre</th>
                <th scope="column">Precio</th>
                <th scope="column">Descripci√≥n</th>
                <th scope="column">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td data-product-property="_id">{{_id}}</td>
                    <td contenteditable="true" data-product-property="name">{{name}}</td>
                    <td contenteditable="true" data-product-property="price">{{price}}</td>
                    <td contenteditable="true" data-product-property="shortDescription">{{shortDescription}}</td>
                    <td>
                        <button class="btn-edit" title="Editar producto">Guardar</button>
                        <button class="btn-delete" title="Eliminar producto">Eliminar</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">Se encontraron {{products.length}} productos</td>
            </tr>
        </tfoot>
    </table>
{{else}}
    <p>No se encontraron productos</p>
{{/if}}