{{#each products}}
    <article class="card">
        <div class="card-image-container">
            <img src="{{mainPhoto}}" alt="{{ingTextAlt}}" class="card-image">
        </div>
        <div class="card-text-container">
            <h3 class="card-title">{{name}}</h3>
            <div class="card-description">
                <p>{{shortDescription}}</p>
            </div>
            <div class="price-card">$ {{price}}</div>
        </div>
        <a href="javascript:void(0)" class="card-link__add botonProducto" data-product-name="{{name}}" data-product-price="{{price}}">Agregar</a>
    </article>
{{/each}}